<li class='clearfix record <%= cycle("on", "on-hover") %>' id="<%= dom_id(tag) -%>">
  <span class='title'>
    <%= tag.title %>
    <span class="preview">&nbsp;</span>
  </span>
  <span class='actions'>
    <%= link_to refinery_icon_tag("application_edit.png"),
                edit_admin_blog_tag_path(tag, :dialog => true, :height => 325),
                :title => t('.edit') %>
    <%= link_to refinery_icon_tag("delete.png"), admin_blog_tag_path(tag),
                :class => "cancel confirm-delete",
                :title => t('.delete'),
                :method => :delete,
                :confirm => t('shared.admin.delete.message', :title => tag.title) %>
  </span>
</li>
