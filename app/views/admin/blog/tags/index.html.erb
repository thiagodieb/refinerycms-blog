<%= render :partial => '/admin/blog/submenu' %>
<div id='records'>
  <% if searching? %>
    <h2><%= t('shared.admin.search.results_for', :query => params[:search]) %></h2>
    <% if @blog_tags.any? %>
      <%= render :partial => "blog_tags",
                 :collection => @blog_tags %>
    <% else %>
      <p><%= t('admin.search_no_results') %></p>
    <% end %>
  <% else %>
    <% if @blog_tags.any? %>
      <%= will_paginate @blog_tags %>

      <%= render :partial => "sortable_list" %>

      <%= will_paginate @blog_tags %>
    <% else %>
      <p>
        <strong>
          <%= t('.no_items_yet', :create => t('admin.blog.submenu.tags.new')) %>
        </strong>
      </p>
    <% end %>
  <% end %>
</div>
